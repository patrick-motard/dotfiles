# -*- mode: toml; -*-
# vim: filetype=toml
[colors.bright]
black = "#928374"
blue = "#83a598"
cyan = "#8ec07c"
green = "#b8bb26"
magenta = "#d3869b"
red = "#fb4934"
white = "#ebdbb2"
yellow = "#fabd2f"

[colors.normal]
black = "#282828"
blue = "#458588"
cyan = "#689d6a"
green = "#98971a"
magenta = "#b16286"
red = "#cc241d"
white = "#a89984"
yellow = "#d79921"

[colors.primary]
background = "#282828"
foreground = "#ebdbb2"

[env]
term = "xterm-256color"

[font]
size = 14.0
offset.x = 0
offset.y = 0

[font.bold]
family = "IosevkaTerm Nerd Font Mono"
style = "Bold"

[font.italic]
family = "IosevkaTerm Nerd Font Mono"
style = "Italic"

[font.normal]
family = "IosevkaTerm Nerd Font Mono"
style = "Regular"

[window]
startup_mode = "Windowed"
option_as_alt = "Both"
decorations = "Transparent"
dynamic_padding = true
opacity = 0.95

[window.padding]
x = 5
y = 25

[scrolling]
history = 100000

[cursor]
unfocused_hollow = true
style = "Block"

[terminal]
shell = { program = "/bin/zsh", args = ["-l", "-c", "session=$(sesh list -t | head -1); [ -n \"$session\" ] && sesh connect \"$session\" || tmux new-session"] }

[mouse]
hide_when_typing = false

[keyboard]
bindings = [
{ key = "J", mods = "Command|Shift", action = "CreateNewWindow" },
# unbind Command-T, CreateNewTab
{ key = "T", mods = "Command", action = "None" },
# Trigger hints mode
{ key = "O", mods = "Command|Shift", action = "ReceiveChar", mode = "~Search" },
]

[hints]
alphabet = "arstgmneioqwfplu"

# URLs
[[hints.enabled]]
regex = "(https?://|git@|ssh://)[^\\s\"'<>\\]\\)]*"
hyperlinks = true
command = "open"
post_processing = true
binding = { key = "O", mods = "Command|Shift" }

# File paths
[[hints.enabled]]
regex = "~?/?[\\w.-]+(/[\\w.-]+)+"
command = "open"
post_processing = true
binding = { key = "P", mods = "Command|Shift" }

# Git commit SHAs
[[hints.enabled]]
regex = "[0-9a-f]{7,40}"
command = { program = "zsh", args = ["-c", "echo $0 | pbcopy"] }
post_processing = false
binding = { key = "G", mods = "Command|Shift" }


