[bar/main.top.middle]
; require monitor to be connected to load bar
monitor-strict = true
inherit = bar/base
monitor = ${env:MONITOR_MAIN}
modules-right = 
modules-left = 
modules-center = i3
background = ${colors.secondary-bg}
width = 25%
bottom = false 
tray-position = none
height = 3%
padding = 0
override-redirect = true
offset-x = 37.5%
offset-y = 20
border-size = 4
border-color = ${colors.nord2}

[bar/main.top.right]
; require monitor to be connected to load bar
monitor-strict = true
inherit = bar/base
monitor = ${env:MONITOR_MAIN}
modules-right = alsa-switch pulseaudio-tail time calendar
modules-left = 
modules-center =
border = 2
background = ${colors.secondary-fg}
width = 365
bottom = false 
tray-position = none
height = 3%
padding = 0
override-redirect = true
offset-x = 84.5%
offset-y = 20
border-size = 4
border-color = ${colors.nord2}

